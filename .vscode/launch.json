{
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'triponics-rpi'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=triponics-rpi",
                    "--package=triponics-rpi"
                ],
                "filter": {
                    "name": "triponics-rpi",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Remote Debug",
            "program": "${workspaceFolder}/target/aarch64-unknown-linux-gnu/debug/${workspaceFolderBasename}",
            "preLaunchTask": "debug: setup",
            "initCommands": [
                "platform select remote-linux",
                "platform connect connect://169.254.0.100:17777",
                "settings set target.inherit-env false"
            ],
            "postDebugTask": "debug: killall",
            "env": {
                "PATH": "/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/local/games:/usr/games"
            }
        }
    ]
}